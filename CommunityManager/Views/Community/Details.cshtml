@model CommunityDetailsViewModel

@{
    ViewBag.Title = "Manage a community";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="d-flex justify-content-center">
    <div class="card " style="width: 50rem;">
        <div class="card-body">
            <h3 class="card-title text-center">@Model.Name</h3>
            <p class="card-text"><span class="fw-bold">Description: </span>@Model.Description</p>
            <p class="card-text"><span class="fw-bold">Created on: </span>@Model.CreatedOn.ToShortDateString()</p>
        </div>

        @if (Model.CreatorId == ViewBag.currentUserId)
        {
            <div class="mb-3 d-flex justify-content-center">
                <a asp-controller="Community" asp-action="Manage" asp-route-id="@Model.Id" class="btn btn-primary mb-2">Manage</a>
            </div>
        }

