@model CommunityDetailsViewModel

<h2 class="text-center">Welcome to @Model.Name</h2>
<hr />

<nav id="sidebarMenu"
     class="collapse d-lg-block sidebar collapse bg-white">
    <div class="position-sticky">
        <div class="list-group list-group-flush mx-3 mt-4">
            <p class="list-group-item">MARKETPLACE</p>
            
            @foreach (var marketplace in Model.Marketplaces)
            {
                <a asp-controller="Marketplace" asp-action="All" asp-route-id="@marketplace.Id" asp-route-param="@Model.Id"
               class="list-group-item list-group-item-action py-2 ripple"
               aria-current="true">
                    <span>@marketplace.Name</span>
                    <div> All products</div>
                </a>
            }

            @if (Model.CreatorId == ViewBag.currentUserId)
            {
                <a asp-controller="Community" asp-action="Add" asp-route-id="@((Guid)Model.Id)"
               class="list-group-item list-group-item-action py-2 ripple"
               aria-current="true">
                    <span>Create a new marketplace</span>
                </a>
            }

