@model CommunityDetailsViewModel

<h1 class="text-center">Welcome to @Model.Name</h1>
<hr />

<div class="text-center">
    <h2>
        <a asp-controller="Community" asp-action="AllChatrooms" asp-route-id="@Model.Id" class="text-decoration-none">Chatrooms</a>
        <a asp-controller="Community" asp-action="AddChatroom" asp-route-id="@Model.Id" class="text-decoration-none"><i class="fa-solid fa-plus"></i></a>
    </h2>
</div>

<div class="text-center">
    <h2>
        <a asp-controller="Community" asp-action="AllMarketplaces" asp-route-id="@Model.Id" class="text-decoration-none">Marketplaces</a>
        <a asp-controller="Community" asp-action="AddMarketplace" asp-route-id="@Model.Id" class="text-decoration-none"><i class="fa-solid fa-plus"></i></a>
    </h2>
</div>

<partial name="_SidebarPartial" model="@Model" />

@section css {
    <link rel="stylesheet" href="~/css/sidebar.css" />
}