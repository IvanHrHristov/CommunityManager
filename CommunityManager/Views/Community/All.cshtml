@model IEnumerable<CommunityViewModel>

<div class="text-center">
    <h1 class="display-4">Welcome to Communities</h1>
</div>

<div class="text-center row">
    @foreach (var community in Model)
    {
        <div class="card col-4" style="width: 20rem; ">
            <div class="card-body">
                <h5 class="card-title mt-1">@community.Name</h5>
                <p class="mb-0">Description: @community.Description</p>
                @if (community.AgeRestricted)
                {
                    <p class="mb-0">This community is 18+ only!</p>
                }
            </div>

            @if (community.Members.Any(m => m.Id == ViewBag.currentUserId) && ViewBag.currentUserId != community.CreatorId)
            {
                <a asp-controller="Community" asp-action="Open" asp-route-id="@community.Id" class="btn btn-primary mb-2">Open</a>
                <span></span>
                <a asp-controller="Community" asp-action="Details" asp-route-id="@community.Id" class="btn btn-primary mb-2">Details</a>
            }

            @if (community.Members.Any(m => m.Id == ViewBag.currentUserId) && ViewBag.currentUserId == community.CreatorId)
            {
                <a asp-controller="Community" asp-action="Open" asp-route-id="@community.Id" class="btn btn-success mb-2">Open</a>
                <span></span>
                <a asp-controller="Community" asp-action="Details" asp-route-id="@community.Id" class="btn btn-primary mb-2">Details</a>
                <span></span>
                <a asp-controller="Community" asp-action="Edit" asp-route-id="@community.Id" class="btn btn-primary mb-2">Edit</a>
                <span></span>
                <a asp-controller="Community" asp-action="Delete" asp-route-id="@community.Id" class="btn btn-danger mb-2">Delete</a>
            }

            @if (community.Members.Any(m => m.Id != ViewBag.currentUserId) && ViewBag.currentUserId != community.CreatorId)
            {
                <a asp-controller="Community" asp-action="Join" asp-route-id="@community.Id" class="btn btn-success mb-2">Join</a>
                <span></span>
                <a asp-controller="Community" asp-action="Details" asp-route-id="@community.Id" class="btn btn-primary mb-2">Details</a>
            }

            @*@if (this.User?.Identity != null && this.User.Identity.Name != community.Seller && community.BuyerId == null)
            {
                <a asp-controller="Marketplace" asp-action="Buy" asp-route-id="@community.Id" class="btn btn-success mb-2">Buy</a>
                <span></span>
                <a asp-controller="Marketplace" asp-action="Details" asp-route-id="@community.Id" class="btn btn-primary mb-2">Details</a>
            }

            @if (this.User?.Identity != null && this.User.Identity.Name == community.Seller && community.BuyerId == null)
            {
                <a asp-controller="Marketplace" asp-action="Details" asp-route-id="@community.Id" class="btn btn-primary mb-2">Details</a>
                <span></span>
                <a asp-controller="Marketplace" asp-action="Edit" asp-route-id="@community.Id" class="btn btn-primary mb-2">Edit</a>
                <span></span>
                <a asp-controller="Marketplace" asp-action="Delete" asp-route-id="@community.Id" class="btn btn-danger mb-2">Delete</a>
            }
            @if (ViewBag.Title == "My Products" && community.BuyerId != null)
            {
                <button class="btn btn-success mb-2" disabled>Purchased</button>
            }*@
        </div>
    }
</div>