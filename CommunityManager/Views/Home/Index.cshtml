@{
    ViewData["Title"] = "Home Page";
}

<div id="carouselIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselIndicators" data-slide-to="1"></li>
        <li data-target="#carouselIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/images/pexels-belle-co-1000445.jpg" alt="First slide">
            <div class="carousel-caption d-none d-md-block card-overlay">
                <h5>Communities</h5>
                <p>Create and join communities with your friends and family!</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/chat-groups-featured.jpg" alt="Second slide">
            <div class="carousel-caption d-none d-md-block card-overlay">
                <h5>Chatrooms</h5>
                <p>Join chatrooms in different communites!</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/AB_DoestheAmericanMallHaveaFuture-1600x760.w.jpg" alt="Third slide">
            <div class="carousel-caption d-none d-md-block card-overlay">
                <h5>Marketplaces</h5>
                <p>Trade proucts with friends and family in marketplaces in different communities!</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

@section css{
    <link rel="stylesheet" href="~/css/home.css" />
}

