@model IEnumerable<ChatroomViewModel>

<a asp-area="Administration" asp-controller="Community" asp-action="Open" asp-route-id="@ViewBag.CommunityId" class="btn btn-primary">Back</a>

<div class="text-center">
    <h1 class="display-4">All chatrooms</h1>
</div>

<br />

<div class="text-center row">
    @if (Model.Count() == 0)
    {
        <h2>No chatrooms available</h2>
    }
</div>

<div class="text-center row">
    <div class="d-flex justify-content-between flex-wrap">
        @foreach (var chatroom in Model)
        {
            <div class="card col-4" style="width: 20rem; ">
                <div class="card-body text-center">
                    <h4 class="card-title mt-1">@chatroom.Name</h4>
                </div>
                @if (chatroom.IsActive)
                {
                    <a asp-area="Administration" asp-controller="Community" asp-action="DeleteChatroom" asp-route-id="@chatroom.Id" asp-route-communityId="@((Guid)(ViewBag.communityId))"
               class="list-group-item list-group-item-action py-2 ripple"
               aria-current="true">
                        <span>Delete</span>
                    </a>
                }

                @if (!chatroom.IsActive)
                {
                    <a asp-area="Administration" asp-controller="Community" asp-action="RestoreChatroom" asp-route-id="@chatroom.Id" asp-route-communityId="@((Guid)(ViewBag.communityId))"
               class="list-group-item list-group-item-action py-2 ripple"
               aria-current="true">
                        <span>Restore</span>
                    </a>
                }
            </div>
        }
    </div>
</div>     